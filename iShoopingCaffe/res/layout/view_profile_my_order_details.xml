<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/header_textcenter_back_option" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
             >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_line"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ngày đặt hàng"
                    android:textColor="@color/text_gray_deal"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txtDateOrders"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="27-04-2014"
                    android:textColor="@color/text_normal"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_line"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phương thức thanh toán:"
                    android:textColor="@color/text_gray_deal"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtPaymentOrders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiền mặt"
                    android:textColor="@color/text_normal"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_line"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="7dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mã đơn hàng:"
                        android:textColor="@color/text_gray_deal"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtPaymentOrders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#168"
                        android:textColor="@color/text_normal"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_line"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="7dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tình trạng"
                        android:textColor="@color/text_gray_deal"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtStatusOrders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đang xử lý"
                        android:textColor="@color/text_normal"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_line"
                    android:gravity="top|center_vertical"
                    android:orientation="vertical"
                    android:padding="7dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/text_gray_deal"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtEmailOrders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="lttruongx4@gmail.com"
                        android:textColor="@color/text_normal"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_line"
                    android:gravity="top|center_vertical"
                    android:orientation="vertical"
                    android:padding="7dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số điện thoại"
                        android:textColor="@color/text_gray_deal"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtPhoneOrders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01216644955"
                        android:textColor="@color/text_normal"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
            <!--  -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_line"
                    android:gravity="top|center_vertical"
                    android:orientation="vertical"
                    android:padding="7dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ thanh toán"
                        android:textColor="@color/text_gray_deal"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtNameOrders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Truong Le"
                        android:textColor="@color/text_normal"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dnvn"
                        android:textColor="@color/text_normal"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtAddressOrders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01 Lê Duẩn, Sơn Trà, Đà Nẵng"
                        android:textColor="@color/text_normal"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hh abc"
                        android:textColor="@color/text_normal"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ĐN"
                        android:textColor="@color/text_normal"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtZipCodeOrders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="59000123"
                        android:textColor="@color/text_normal"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtCountryOrders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Việt Nam"
                        android:textColor="@color/text_normal"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_line"
                    android:gravity="top|center_vertical"
                    android:orientation="vertical"
                    android:padding="7dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ nhận hàng"
                        android:textColor="@color/text_gray_deal"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtNameShipping"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Truong Le"
                        android:textColor="@color/text_normal"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dnvn"
                        android:textColor="@color/text_normal"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtAddressShipping"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01 Lê Duẩn, Sơn Trà, Đà Nẵng"
                        android:textColor="@color/text_normal"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hh abc"
                        android:textColor="@color/text_normal"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ĐN"
                        android:textColor="@color/text_normal"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtZipCodeShipping"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="59000123"
                        android:textColor="@color/text_normal"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtCountryShipping"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Việt Nam"
                        android:textColor="@color/text_normal"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_itemPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_line"
                android:gravity="top|center_vertical"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_line"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="7dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="7dp" >

                    <TextView
                        android:id="@+id/shoppingCartTextTotalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txtTotalPrice"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/shoppingCartEstimateTotalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/red"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/shoppingCartEstimatePriceCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="1dp"
                        android:layout_toLeftOf="@id/shoppingCartEstimateTotalPrice"
                        android:textColor="@color/red"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/borderimage" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="7dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="7dp" >

                    <TextView
                        android:id="@+id/shoppingCartTextTransport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txtTransport"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/shoppingCartTextTransport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="đ 0"
                        android:textColor="@color/red"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/shoppingCartEstimatePriceTransport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/shoppingCartTextTransport"
                        android:text="@string/priceTransport"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/border_line"
                android:orientation="horizontal"
                android:padding="14dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtTotalSummary"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/shoppingCartEstimateTotalSummaryPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/red"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/shoppingCartSummaryPriceCurrency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:layout_toLeftOf="@id/shoppingCartEstimateTotalSummaryPrice"
                    android:textColor="@color/red"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>