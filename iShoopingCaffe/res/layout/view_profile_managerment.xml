<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imv_User"
                android:layout_width="@dimen/image_circle_size_big_avatar_user"
                android:layout_height="@dimen/image_circle_size_big_avatar_user"
                android:layout_marginRight="7dp"
                android:background="@drawable/circle_poster_activity_node_detail"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_comment" />

            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleSmallInverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >
            </ProgressBar>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edtFirstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_line"
                android:hint="@string/hintFirstName"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLength="30"
                android:textColor="@color/text_normal" />

            <EditText
                android:id="@+id/edtLastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/border_line"
                android:hint="@string/hintLastName"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLength="30"
                android:textColor="@color/text_normal" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/edtFullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/border_line"
        android:hint="@string/hintFullName"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLength="30"
        android:textColor="@color/text_normal" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/border_line"
        android:hint="@string/hintEmail"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:textColor="@color/text_normal" />

    <Button
        android:id="@+id/btnUpdateProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_normal"
        android:text="@string/updateInforProfile"
        android:textColor="@color/selector_text_white" />

    <TextView
        android:id="@+id/txtInforPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/inforPayment"
        android:textColor="@color/text_normal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border_line"
        android:orientation="vertical" >
		<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/edtFirstName_PaymentInfor"
                android:layout_width="0dip"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ellipsize="middle"
                android:hint="@string/hintFirstName"
                android:imeOptions="actionNext"
                android:padding="10dip"
                android:singleLine="true"
                android:textColor="@color/text_normal" />

            <EditText
                android:id="@+id/edtLastName_PaymentInfor"
                android:layout_width="0dip"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ellipsize="middle"
                android:hint="@string/hintLastName"
                android:imeOptions="actionNext"
                android:padding="10dip"
                android:singleLine="true"
                android:textColor="@color/text_normal" />
        </LinearLayout>
         <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/borderimage" />
		<EditText
            android:id="@+id/edtFullname_PaymentInfor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:ellipsize="middle"
            android:hint="@string/hintFullName"
            android:imeOptions="actionNext"
            android:padding="10dip"
            android:textColor="@color/text_normal" />
		<View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/borderimage" />
        <EditText
            android:id="@+id/edtPhone_PaymentInfor"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:ellipsize="middle"
            android:hint="@string/hintPhoneNumber"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:padding="10dip"
            android:singleLine="true"
            android:textColor="@color/text_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/borderimage" />

        <EditText
            android:id="@+id/edtAddress_PaymentInfor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:ellipsize="middle"
            android:hint="@string/hintAddress"
            android:imeOptions="actionNext"
            android:padding="10dip"
            android:textColor="@color/text_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/borderimage" />

        
        

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/edtCity_PaymentInfor"
                android:layout_width="0dip"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ellipsize="middle"
                android:hint="@string/hintCity"
                android:imeOptions="actionNext"
                android:padding="10dip"
                android:singleLine="true"
                android:textColor="@color/text_normal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/borderimage" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/edtState_PaymentInfor"
                android:layout_width="0dip"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ellipsize="middle"
                android:hint="@string/hintState"
                android:imeOptions="actionNext"
                android:padding="10dip"
                android:singleLine="true"
                android:textColor="@color/text_normal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/borderimage" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2" >

            <EditText
                android:id="@+id/edtZipcode_PaymentInfor"
                android:layout_width="0dip"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ellipsize="middle"
                android:hint="@string/hintZipCode"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="10"
                android:padding="10dip"
                android:singleLine="true"
                android:textColor="@color/text_normal" />

            <Button
                android:id="@+id/btnSelectCountry_PaymentInfor"
                android:layout_width="0dip"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:padding="10dip"
                android:text="@string/country"
                android:textColor="@color/text_normal"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
	<!-- address payment -->
	<TextView
        android:id="@+id/txtAddressInforPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/inforAddressPayment"
        android:textColor="@color/text_normal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border_line"
        android:orientation="vertical" >
