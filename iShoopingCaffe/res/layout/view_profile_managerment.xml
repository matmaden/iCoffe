        </LinearLayout>
         <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/borderimage" />
		<EditText
            android:id="@+id/edtFullname_AddressPaymentInfor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
